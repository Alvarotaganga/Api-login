source 'https://rubygems.org'

# Ruby version
ruby '3.4.2'  # O la versión que estés utilizando

# Sinatra framework
gem 'sinatra'

# PostgreSQL database driver
gem 'pg'

# JSON for parsing and generating JSON responses
gem 'json'

# Dependencias adicionales que puedas necesitar (opcional)
# gem 'puma' # Si usas puma como servidor
# gem 'dotenv' # Si usas un archivo .env para configuraciones secretas

# Si estás desarrollando localmente y no en producción, puedes incluir el siguiente gem:
group :development do
  gem 'pry'   # Para depuración
  gem 'rack-attack' # Si necesitas protección contra ataques HTTP
end

# Si necesitas pruebas, puedes agregar gemas como:
group :test do
  gem 'rspec'
end
