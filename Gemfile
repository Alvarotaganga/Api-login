source 'https://rubygems.org'

# Versión de Ruby
ruby '3.4.2'

# Framework Sinatra
gem 'sinatra', '4.1.1'

# Controlador PostgreSQL
gem 'pg', '1.5.9'

# Para manejar configuraciones secretas de forma segura
gem 'dotenv', require: 'dotenv/load'

# Puma (servidor web en producción)
gem 'puma', '6.6.0'

# rackup para ejecutarlo en producción
gem 'rackup'

# Dependencias de desarrollo
group :development do
  gem 'pry', '0.15.2'
  gem 'rack-attack', '6.7.0'
end

# Dependencias para pruebas
group :test do
  gem 'rspec', '3.13.0'
end
